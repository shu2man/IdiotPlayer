<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yellow.idiotplayer.MainActivity">

    <ImageButton
        android:id="@+id/img_cd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_circle"
        android:src="@drawable/image"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/song_name_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/songname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cd"/>

    <TextView
        android:id="@+id/time_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/img_cd"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/time_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/img_cd"
        app:layout_constraintRight_toRightOf="parent"/>
    <SeekBar
        android:id="@+id/seekbar_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/img_cd"
        app:layout_constraintLeft_toRightOf="@+id/time_current"
        app:layout_constraintRight_toLeftOf="@+id/time_all"/>
    <TextView
        android:id="@+id/play_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOPLAY"
        app:layout_constraintLeft_toLeftOf="@id/time_current"
        app:layout_constraintBottom_toTopOf="@id/time_current"
        />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="100dp"
        android:onClick="changePlayState"/>
    <Button
        android:id="@+id/quit_btn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="60dp"
        android:onClick="quitApp"/>
    <Button
        android:id="@+id/stop_btn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/quit_btn"
        app:layout_constraintLeft_toRightOf="@id/play_btn"
        android:layout_marginBottom="100dp"
        android:onClick="stopPlay"/>
    <Button
        android:id="@+id/random_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="R"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="randomNext"/>

</android.support.constraint.ConstraintLayout>
